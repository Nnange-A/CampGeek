
<% layout("layouts/boilerplate") -%>



<div class="row">

    <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">

        <div class="card shadow mb-4">

            <div class="card-body">

                <h4 class="card-title mb-4 text-center">Login</h4>

                <form class="validated-form" action="/login" method="post" novalidate>

                    <div class="mb-4">
                
                        <label class="form-label mb-0" for="username">Username:</label>
                        <input class="noMarginInput form-control mt-2" type="text" id="username" name="username" placeholder="john_doe" autofocus required>
        
                        <div class="valid-feedback">
                            Looks good!
                        </div>
        
                        <div class="invalid-feedback">
                            Enter your username.
                        </div>
                
                    </div>
                    
                    <div class="mb-5">
                
                        <label class="form-label mb-0" for="password">Password:</label>
                        <input class="noMarginInput form-control mt-2" type="password" id="password" name="password" placeholder="password" required>
        
                        <div class="valid-feedback">
                            Looks good!
                        </div>
        
                        <div class="invalid-feedback">
                            Enter your password.
                        </div>
                
                    </div>
                    
                    <div class="mb-3 d-grid gap-2">
                
                        <button class="btn btn-success">Login</button>
                
                    </div>
                
                </form>

            </div>

        </div>

        <p class="mb-5">Don't have an account? <a href="/register">Create one</a>.</p>

    </div>

</div>